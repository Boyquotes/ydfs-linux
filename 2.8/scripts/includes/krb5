    CFLAGS+=" -fPIC -fno-strict-aliasing -fstack-protector-all"
   # CPPFLAGS+=" -I/usr/include/et"
   cd src
   ./configure --prefix=$PREFIX \
               --sbindir=/$PREFIX/bin \
               --sysconfdir=$PREFIX/etc \
               --localstatedir=$PREFIX/var/lib \
               --enable-shared \
               --with-system-et \
               --with-system-ss \
               --disable-rpath \
               --without-tcl \
               --enable-dns-for-realm \
               --with-ldap \
               --without-system-verto || exit 1

make || exit 1
make install || exit 1
