. ./config.ini
[ ! -e $HOME/dibab/modules/$ARCH/bin/mksquashfs ] && echo "cannot found $HOME/dibab/modules/$ARCH/bin/mksquashfs" && exit 0
export LD_LIBRARY_PATH=$HOME/x86/lib
rm $LCMBUILD/drivers-$ARCH.squashfs
if [ "$ARCH" = "x86_64" ]
then
export LD_LIBRARY_PATH=$HOME/x86_64/lib
else
export LD_LIBRARY_PATH=$HOME/x86/lib
fi
$HOME/dibab/modules/$ARCH/bin/mksquashfs $HOME/dibab/kernel-$ARCH/modules/$KERNEL3/lib/modules $LCMBUILD/drivers-$ARCH.squashfs
echo
