 cd ncursesw-build
 ../configure --prefix=$PREFIX --with-shared --with-normal --without-debug --without-ada --enable-widec --enable-pc-files --with-cxx-binding --with-cxx-shared --with-pkg-config-libdir=$PREFIX/lib/pkgconfig
 
 cd ../ncurses-build
 [[ $CARCH = "x86_64" ]] && CONFIGFLAG="--with-chtype=long"
 ../configure --prefix=$PREFIX --with-shared --with-normal --without-debug --without-ada $CONFIGFLAG --with-cxx-binding --with-cxx-shared --enable-pc-files --with-pkg-config-libdir=$PREFIX/lib/pkgconfig

 cd ..
