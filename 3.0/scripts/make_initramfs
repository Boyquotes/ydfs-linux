. ./config.ini

if [ "$CARCH" = "x86" ] && [ ! -e /$HOME/dibab/build/lfs-bootscripts ]
then
  [ ! -e /$HOME/dibab/tarballs/lfs-bootscripts-20100627.tar.bz2 ] && wget --directory-prefix=/$HOME/dibab/tarballs http://www.linuxfromscratch.org/lfs/downloads/6.8/lfs-bootscripts-20100627.tar.bz2
  [ ! -e /$HOME/dibab/src/lfs-bootscripts-20100627  ] && tar xjvf /$HOME/dibab/tarballs/lfs-bootscripts-20100627.tar.bz2  --directory=/$HOME/dibab/src/
  DESTDIR=/$HOME/dibab/build/lfs-bootscripts make -C /$HOME/dibab/src/lfs-bootscripts-20100627
  [ ! -e /$HOME/dibab/build/lfs-bootscripts ] && exit 2
fi

INITRAMFS=/$HOME/dibab/tmp/initramfs-$CARCH
[ ! -e init-$CARCH ] && exit 0

if [ -e $INITRAMFS ]
then
  rm -fR $INITRAMFS/*
else
  install -d $INITRAMFS
fi

cp -fR init-$CARCH/* $INITRAMFS
echo "$DISTRONAME" > $INITRAMFS/dibab-name
basename $PWD > $INITRAMFS/dibab-release

# if [ ! -e $HOME/dibab/src/yaffs2utils-read-only/src/buildok ]
# then
# cd $HOME/dibab/src
# svn checkout http://yaffs2utils.googlecode.com/svn/trunk/ yaffs2utils-read-only
# cd yaffs2utils-read-only
# cd src
# make && touch buildok 
# fi

# mknod needs root
if [ ! -e $HOME_DIBAB/dev-initramfs.cpio ]
then
  install -d $INITRAMFS/dev
  sudo sh /$HOME/dibab/src/busybox-$BUSYBOX/examples/bootfloppy/mkdevs.sh $INITRAMFS/dev ||Â exit $?
  sudo sh $HOME_DIBAB/scripts/make_devs $INITRAMFS/dev
  ls -l $INITRAMFS/dev
  MYPWD=$PWD
  cd $INITRAMFS 
  #find dev -print | grep -v '/[.svn]' |  cpio -o -H newc -F $HOME_DIBAB/dev-initramfs.cpio 
  find dev -print |  cpio -o -H newc -F $HOME_DIBAB/dev-initramfs.cpio
  cd $MYPWD
fi


 [ "$CARCH" = "x86" ] && cp -fR /$HOME/dibab/build/lfs-bootscripts/* $INITRAMFS

KERNEL36="$KERNEL_PREFIX""`echo $KERNEL3 | tr -d '.'`"     
KERNEL=$KERNEL3

[ -n "$1" ] && KERNEL=$1 
  KERNEL_MODULES_PATH=$HOME/dibab/kernel-$CARCH/modules/$KERNEL
  cp -a /$HOME/dibab/build/busybox-$CARCH-$BUSYBOX/_install $INITRAMFS/busybox || exit 2
  install -d $INITRAMFS/share
  cp -a /$HOME/dibab/src/busybox-$BUSYBOX/examples/udhcp $INITRAMFS/share || exit 3
  if [ ! -n "$1" ] 
  then
    INITRD="`echo $KERNEL | tr -d '.'`"
  else
    INITRD="`echo $1 | tr -d '.'`"
  fi 
  install -d $INITRAMFS/lib/modules/$KERNEL/
  cp $KERNEL_MODULES_PATH/lib/modules/$KERNEL/modules.dep $INITRAMFS/lib/modules/$KERNEL/
  DEPS=""
  du -sh $INITRAMFS
  date "+%Y-%m-%d-%H-%M" > $INITRAMFS/initramfs-build-date
  date "+%Y-%m-%d" > $INITRAMFS/dibab-date
  install -d $HOME/dibab/build-$CARCH
  cp $HOME_DIBAB/dev-initramfs.cpio $HOME/dibab/build-$CARCH/$INITRD
#  [ -e $HOME/uclib/ ] && cp -fR $HOME/uclib/* $INITRAMFS/
install -d $INITRAMFS/lib
cd $INITRAMFS

ln -sf /busybox/sbin/init  $HOME/dibab/tmp/initramfs-$CARCH/
ROOTFS=/$HOME/dibab/tmp/initramfs-$CARCH/
install -d $ROOTFS/$HOME
install -d $ROOTFS/proc
install -d $ROOTFS/sys
install -d $ROOTFS/etc


if [ "$CARCH" = "x86" ] || [ "$CARCH" = "x86_64" ]
then
  echo $HOME/dibab/x-tools/i386-unknown-linux-uclibc/i386-unknown-linux-uclibc/sysroot/lib/
  sed -i "s@\$HOME@$HOME@g" $HOME/dibab/tmp/initramfs-$CARCH/dibab/detect/media
  sed -i "s@\$HOME@$HOME@g" $HOME/dibab/tmp/initramfs-$CARCH/etc/profile
  sed -i "s@\$HOME@$HOME@g" $HOME/dibab/tmp/initramfs-$CARCH/dibab/detect/modules
else
  if [ "$TOOLCHAIN" = "FriendlyARM" ]
  then
    # cp -a $HOME/dibab/toolchain/arm/opt/FriendlyARM/toolschain/4.4.3/arm-none-linux-gnueabi/sys-root/* $INITRAMFS/
    # cp -a $HOME/dibab/toolchain/arm/opt/FriendlyARM/toolschain/4.4.3/arm-none-linux-gnueabi/sys-root/lib/*so* $INITRAMFS/lib
    for LIB in ld-linux.so.3 libc.so.6 libdl.so.2 libpthread.so.0 libm.so.6 libgcc_s.so.1
    do
      cp $HOME/dibab/toolchain/arm/opt/FriendlyARM/toolschain/4.4.3/arm-none-linux-gnueabi/sys-root/lib/$LIB $INITRAMFS/lib
    done
  fi
  if [ "$TOOLCHAIN" = "crosstool-ng" ]
  then
    # for LIB in ld-uClibc.so.0 libdl.so.0 libc.so.0 libpthread.so.0 libm.so.0 libgcc_s.so.1
    for LIB in ld-linux.so.3 libc.so.6 libdl.so.2 libpthread.so.0 libm.so.6 libgcc_s.so.1
    do
     cp $HOME/dibab/x-tools/arm-unknown-linux-"$GNU"/arm-unknown-linux-"$GNU"/sysroot/lib/$LIB $INITRAMFS/lib || sleep 5
    done
  fi
  if [ "$TOOLCHAIN" = "buildroot" ]
  then
    for LIB in ld-uClibc.so.0 libdl.so.0 libc.so.0 libpthread.so.0 libm.so.0 libgcc_s.so.1
    do
     echo "$HOME/dibab/buildroot-2011.08/output/target/lib/ld-uClibc.so.0/$LIB -> $INITRAMFS/lib "
     cp $HOME/dibab/buildroot-2011.08/output/target/lib/$LIB $INITRAMFS/lib || exit $?
    done
  fi

sed -i "s@\$HOME@$HOME@g" $HOME/dibab/tmp/initramfs-$CARCH/etc/profile
cd /$HOME/dibab/tmp/initramfs-$CARCH
if [ -e /rootfs ] # nfs access
then
 # sudo cpio --quiet -i -d < $HOME_DIBAB/dev-initramfs.cpio
 sudo rm -fR /rootfs/* 
 sudo cp -fR /$HOME/dibab/tmp/initramfs-$CARCH/* /rootfs
fi

fi

[ -e $HOME/$CARCH/bin/ntfs-3g ] && cp $HOME/$CARCH/bin/ntfs-3g /$HOME/dibab/tmp/initramfs-$CARCH

[ -e $HOME/dibab/build/linux-$CARCH-"$KERNEL3"/.config-initramfs ] && rm $HOME/dibab/build/linux-$CARCH-"$KERNEL3"/.config-initramfs

cd /$HOME/dibab/tmp/initramfs-$CARCH
find . -print |  grep -v '.svn' | cpio -A -o -H newc -F $HOME/dibab/build-$CARCH/$INITRD
ls -lh  $HOME/dibab/build-$CARCH/$INITRD

[ -e /media/sf_iso/ ] && cp $HOME/dibab/build-$CARCH/$INITRD /media/sf_iso

echo
