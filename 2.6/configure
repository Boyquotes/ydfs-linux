[ $USER != "root" ] && echo "$0 should be run as root" && exit 1
if [ -e /etc/debian_version ]
then
  DEBIAN="libncurses5-dev"
  UBUNTU="ncurses-dev"
  [ -e /usr/lib/x86_64-linux-gnu/ ] && DEBIAN9="gcc-multilib g++-multilib python-mako"
  COMMON="ftjam locales syslinux-utils ghc libghc-random-dev libghc-zlib-dev libghc-entropy-dev libghc-utf8-string-dev ghc libghc-vector-dev libghc-bytestring-show-dev libghc-network-dev libghc-dataenc-dev libghc-hslogger-dev makeself iasl clang libclc-dev libclang-3.5-dev doxygen p7zip-full xutils-dev xmlto libelf-dev imagemagick bam fontforge ruby libboost-all-dev libboost-dev nasm libatomic-ops-dev unzip bc lynx cmake xfonts-utils xsltproc zlib1g-dev gperf bzr unicode-data llvm gettext docbook-xsl make mtd-utils pciutils texinfo bzip2 subversion git gawk bison flex automake autoconf libtool-bin libtool cvs lzma g++ genisoimage libmpfr-dev libgmp3-dev"
  apt-get install $DEBIAN $COMMON $DEBIAN9
else
  echo "Ydfs is used to be build from debian/ubuntu"
  exit 1
fi
